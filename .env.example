# Database configuration
DB_USER=your_db_user           # Your database username
DB_HOST=localhost              # Database host (e.g., localhost or a remote server)
DB_NAME=your_db_name           # Your database name
DB_PASSWORD=your_db_password   # Your database password
DB_PORT=5432                   # Your database port (typically 5432 for PostgreSQL)
# DATABASE_URL=postgres://<user>:<password>@<host>:<port>/<database_name>

# JWT configuration
JWT_SECRET=your_jwt_secret     # Secret for JWT signing
JWT_EXPIRATION_TIME=1h         # JWT expiration time

# General configuration
PORT=3000                      # Port for the server to run on
NODE_ENV=development           # Set to "production" in production environment
