{
  "compilerOptions": {
    "target": "ESNext",                                
    "module": "CommonJS",                           
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "moduleResolution": "node",
    "strict": true,                                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,       
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*"                                      
  ],
  "exclude": [
    "node_modules"                                  
  ]
}
